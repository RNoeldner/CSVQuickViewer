<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MainPage"
             xmlns:maui="clr-namespace:Maui"
             >
    <ContentPage.BindingContext>
        <maui:MainPageViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            VerticalOptions="Center" Margin="5">

            <Button 
                Text="CSV Quick Viewer"
                FontSize="48"
                HorizontalOptions="Center"  LineBreakMode="WordWrap"/>

            <Button 
                x:Name="OpenFile"
                Text="{Binding SelectedFile}"
                SemanticProperties.Hint="Open file for display"
                Command="{Binding ConnectCommand}"
                HorizontalOptions="Center" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"/>
            <Label Text="Checking file format" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" ></Label>
        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
