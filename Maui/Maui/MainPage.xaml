<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="CSV Quick Viewer"
                HeightRequest="200"
                HorizontalOptions="Center" />
                

            <Button 
                x:Name="OpenFile"
                Text="Open File"
                SemanticProperties.Hint="Open file for display"
                Clicked="OpenFile_ClickedAsync"                  
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
